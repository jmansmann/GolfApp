@page
@model GolfApp.Pages.Golfers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Golfer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Golfer.GolferId" />
            <div class="form-group">
                <label asp-for="Golfer.FirstName" class="control-label"></label>
                <input asp-for="Golfer.FirstName" class="form-control" />
                <span asp-validation-for="Golfer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Golfer.LastName" class="control-label"></label>
                <input asp-for="Golfer.LastName" class="form-control" />
                <span asp-validation-for="Golfer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Golfer.Sex" class="control-label"></label>
                <select asp-for="Golfer.Sex" class="form-control"></select>
                <span asp-validation-for="Golfer.Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Golfer.Email" class="control-label"></label>
                <input asp-for="Golfer.Email" class="form-control" />
                <span asp-validation-for="Golfer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexGolfer">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
